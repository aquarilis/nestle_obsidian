        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
   try {
      var obsidianPreference_GR = new GlideRecord(DXCObsidianConstants.OBSIDIAN_PREFERENCE_TABLE);
      obsidianPreference_GR.addQuery("type", current.type);
      obsidianPreference_GR.addQuery("user_related", current.user_related);
      obsidianPreference_GR.addQuery("default", true);
      obsidianPreference_GR.addQuery("sys_id", "!=", current.sys_id);
      obsidianPreference_GR.query();
      while (obsidianPreference_GR.next()){
         obsidianPreference_GR.setValue("default", false);
         obsidianPreference_GR.update();
      }   
   } catch(exception) {
      var dxcLogger = new global.DXCGSLog("com.dxc.global.debugging_level", "(DXC) Manage Obsidian user pref. default");
      dxcLogger.logError(exception);
   }
})(current, previous);]]></script>
